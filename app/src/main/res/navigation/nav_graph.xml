<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentStart">

    <fragment
        android:id="@+id/fragmentStart"
        android:name="com.example.mylogapp.FragmentStart"
        android:label="@string/go_to_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_fragmentStart_to_fragmentLogin"
            app:destination="@id/fragmentLogin"
            app:enterAnim="@android:anim/fade_in" />
    </fragment>
    <fragment
        android:id="@+id/fragmentLogin"
        android:name="com.example.mylogapp.FragmentLogin"
        android:label="@string/login"
        tools:layout="@layout/fragment_login" >

        <action
            android:id="@+id/action_fragmentLogin_to_fragmentAccount"
            app:destination="@id/fragmentAccount"
            app:enterAnim="@android:anim/fade_in" />

    </fragment>
    <fragment
        android:id="@+id/fragmentAccount"
        android:name="com.example.mylogapp.FragmentAccount"
        android:label="@string/Account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_fragmentAccount_to_fragmentStart"
            app:destination="@id/fragmentStart"
            app:enterAnim="@android:anim/slide_in_left" />
        <argument
            android:name="login"
            app:argType="string" />
        <argument
            android:name="password"
            app:argType="string" />
    </fragment>
</navigation>